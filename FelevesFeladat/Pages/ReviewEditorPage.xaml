<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FelevesFeladat.Pages.ReviewEditorPage"
             Title="Szerkeztő">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Image x:Name="imgPreview" 
                   Source="{Binding CurrentReview.ImagePath}" 
                   HeightRequest="200" 
                   Aspect="AspectFit" 
                   BackgroundColor="LightGray"/>

            <Grid ColumnDefinitions="*,*">
                <Button Grid.Column="0" Text="Fotó készítése" Command="{Binding TakePhotoCommand}" Margin="0,0,5,0"/>
                <Button Grid.Column="1" Text="Galéria" Command="{Binding ChoosePhotoCommand}" Margin="5,0,0,0"/>
            </Grid>

            <Label Text="Étel neve" FontSize="12" TextColor="Gray"/>
            <Entry Text="{Binding CurrentReview.NameOfItem}" Placeholder="Pl. Sajtos burger"/>

            <Label Text="Étterem neve" FontSize="12" TextColor="Gray"/>
            <Entry Text="{Binding CurrentReview.RestaurantName}" Placeholder="Pl. MekDánelc"/>

            <Label Text="Helyszín" FontSize="12" TextColor="Gray"/>
            <Grid ColumnDefinitions="*, Auto">
                <Entry Grid.Column="0" Text="{Binding CurrentReview.LocationName}" Placeholder="GPS koordináták vagy cím"/>
            </Grid>

            <Label Text="Értékelés (1-5)" FontSize="12" TextColor="Gray"/>
            <Slider Minimum="1" Maximum="5" Value="{Binding CurrentReview.Rating}" />
            <Label Text="{Binding CurrentReview.Rating, StringFormat='{0} csillag'}" HorizontalOptions="Center"/>

            <Button Text="Mentés" 
                    Command="{Binding SaveNewFoodCommand}" 
                    BackgroundColor="Green" 
                    TextColor="White" 
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
